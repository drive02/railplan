# ============================================================
# RailPlan — Configuration des variables d'environnement
# Copiez ce fichier en .env et remplissez vos valeurs
# ============================================================

# Base de données
DATABASE_URL=sqlite:////app/data/railplan.db
# Pour PostgreSQL : DATABASE_URL=postgresql://user:password@localhost:5432/railplan

# Email SMTP (pour les alertes)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre@email.com
MAIL_PASSWORD=votre_mot_de_passe_application

# Mode debug (false en production !)
DEBUG=false
